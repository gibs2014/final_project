<div class="page-header">
  <h1>New Order Item</h1>
</div>

<%= form_tag(order_items_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :order_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :order_id, options_from_collection_for_select(Order.all, :id, :created_at), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :item_id, options_from_collection_for_select(Item.all, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Order Item", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
