<div class="page-header">
  <h1>Order items</h1>
</div>

<p><%= link_to 'Add a New Order Item', new_order_item_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Order</th>
      <th>Item</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order_id %></td>
        <td><%= order_item.item_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, order_item_url(order_item), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_order_item_url(order_item), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, order_item_url(order_item), method: 'delete', data: { confirm: "Do you really want to delete this order_item?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

