<div class="page-header">
  <h1>New Order</h1>
</div>

<%= form_tag(orders_url, method: 'post', class: 'form-horizontal') do %>
  <% Item.all.each do |item| %>
    <%= label_tag("item_#{item.id}", image_tag('http://ecx.images-amazon.com/images/I/71RS3wri-DL._SX522_.jpg')) %>
    <%= check_box_tag "item_#{item.id}" %>
  <% end %>



  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :complete, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :complete %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Order", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
