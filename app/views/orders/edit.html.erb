<div class="page-header">
  <h1>Editing Order #<%= @order.id %></h1>
</div>

<%= form_tag(order_url(@order), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name, @order.user_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :complete, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :complete, 1, @order.complete? %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Order", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
